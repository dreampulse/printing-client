{
  "presets": [
    ["env", {
      "targets": {
        "browsers": [
          "last 2 versions",
          "not IE <= 11"
        ]
      }
    }],
    "flow",
    "react"
  ],
  "plugins": [
    "transform-class-properties",
    "transform-object-rest-spread",
    "react-hot-loader/babel"
  ],
  "retainLines": true,
  "env": {
    "test": {
      "plugins": [
        "istanbul"
      ],
      "sourceMaps": "inline"
    },
    "production": {
      "sourceMaps": true
    }
  }
}
