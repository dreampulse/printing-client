{
  "presets": ["es2015", "react", "stage-2"],
  "plugins": [
    "transform-class-properties",
    "transform-async-to-generator",
    "react-hot-loader/babel"
  ],
  "retainLines": true,
  "env": {
    "test": {
      "plugins": [
        [ "babel-plugin-webpack-alias", { "config": "./webpack/production.js" } ],
        "istanbul"
      ],
      "sourceMaps": "inline"
    }
  }
}
